<Page x:Class="RockPaperScissors.ResultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RockPaperScissors"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ResultPage">

    <Grid Background="White">
        <StackPanel>
            <Label Content="A játék köreinek eredményei:"/>
            <TextBlock TextWrapping="Wrap" x:Name="GameResults"/>
            <Label x:Name="PlayerLabel"/>
            <TextBlock TextWrapping="Wrap" x:Name="PlayerPreviousResults"/>
        </StackPanel>
    </Grid>
</Page>

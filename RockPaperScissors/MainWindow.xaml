<Window x:Class="RockPaperScissors.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RockPaperScissors"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Adja meg a nevét:"/>
            <TextBox Text="Bence" />
            <Label Content="Adja meg a játék tipusát:"/>
            <RadioButton Content="kő - papír - olló"/>
            <RadioButton Content="kő - papír - olló - gyík - Spock"/>
            <Button Content="Játék Indítása" Click="NavigationToGamePage"/>
        </StackPanel>
        <Frame x:Name="MainFrame" />
    </Grid>
</Window>
